
@{
    ViewData["Title"] = "FolgasPendentes";
}



<h1>Folgas Pendentes de Aprovação</h1>
<table>
    <thead>
        <tr>
            
            <th>Pedido</th>>
            <th></th>
            <th></th>
            <th>Início</th>
            <th></th>
            <th></th>
            <th> Fim</th>
            <th></th>
            <th></th>
            <th>Motivo</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            
            
            <th>Gestor</th>
            
            
            
            
            
            
        </tr>
    </thead>

    <tbody>
        @foreach (var Folga in Model)
        {


            <tr>
                
                <td>@Folga.DataPedido.ToShortDateString()</td>
                <td></td>
                <td></td>
                <td>@Folga.DataInicio.ToShortDateString()</td>
                <td></td>
                <td></td>
                <td>@Folga.DataFim.ToShortDateString()</td>
                <td></td>
                <td></td>
                <td>@Folga.Motivo</td>
                <td></td>
                <td></td>
                <td>@Folga.Gestor</td>
                <td></td>
                <td></td>
                <td>
                    <form asp-action="AprovarRejeitarFolga" method="post">
                        <input type="hidden" name="folgaId" value="@Folga.FolgaId" />
                        <input type="text" name="Gestor" required />
                        <button type="submit" name="aprovar" value="true">Aprovar</button>
                        <button type="submit" name="aprovar" value="false">Rejeitar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


        }


